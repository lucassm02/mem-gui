{
  "name": "MemGUI",
  "description": "GUI for managing Memcached",
  "private": false,
  "version": "0.1.0",
  "author": {
    "name": "Lucas Santos"
  },
  "main": "src/electron/main.cjs",
  "type": "module",
  "license": "SEE LICENSE IN LICENSE",
  "scripts": {
    "clean": "rimraf dist && rimraf release",
    "prestart": "yarn clean && tsc && node scripts/build-server.js",
    "predev": "yarn clean && tsc && node scripts/build-server.js",
    "dev": "concurrently \"npm run ui\" \"wait-on http://localhost:5173 && npm run electron\"",
    "ui": "vite",
    "server": "tsx src/server/index.ts",
    "electron": "electron .",
    "build:server": "tsc",
    "build:ui": "vite build",
    "build:all": "yarn clean && yarn build:ui && yarn build:server && node scripts/build-server.js && electron-builder",
    "start": "electron ."
  },
  "build": {
    "asar": false,
    "extraFiles": [
      {
        "from": "dist/",
        "to": "resources/"
      }
    ],
    "appId": "com.memgui.app",
    "productName": "MemGUI",
    "directories": {
      "output": "release",
      "buildResources": "assets"
    },
    "files": [
      "dist/**/*",
      "src/electron/main.cjs",
      "package.json"
    ],
    "win": {
      "icon": "assets/mem-gui.ico"
    },
    "linux": {
      "icon": "assets/mem-gui.png",
      "target": [
        "AppImage",
        "deb",
        "snap"
      ]
    }
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@tailwindcss/vite": "^4.0.1",
    "axios": "^1.7.9",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "express-validator": "^7.2.1",
    "memjs": "^1.3.2",
    "p-limit": "3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "uuid": "^11.0.5"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/memjs": "^1.3.3",
    "@types/node": "^22.13.0",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.2",
    "electron": "^34.0.2",
    "electron-builder": "^25.1.8",
    "electron-is-dev": "^3.0.1",
    "esbuild": "^0.24.2",
    "eslint": "^9.17.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "rimraf": "^5.0.0",
    "tailwindcss": "^4.0.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vite": "^6.0.5",
    "wait-on": "^8.0.2"
  }
}
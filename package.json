{
  "name": "mem-gui",
  "private": true,
  "version": "0.0.0",
  "main": "src/electron/main.cjs",
  "type": "module",
  "scripts": {
    "prestart": "rm -rf dist && tsc && mv dist/api/server.js dist/api/server.cjs",
    "predev": "rm -rf dist && tsc && mv dist/api/server.js dist/api/server.cjs",
    "dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "ui": "vite",
    "api": "node --import tsx src/api/server.ts",
    "build": "tsc && vite build && electron-builder",
    "start": "electron ."
  },
  "build": {
    "asar": false,
    "extraResources": [
      {
        "from": "dist/api/",
        "to": "src/api/",
        "filter": [
          "**/*"
        ]
      }
    ],
    "appId": "com.seuapp.desktop",
    "productName": "MeuApp",
    "directories": {
      "buildResources": "assets"
    },
    "files": [
      "dist/**/*",
      "electron/main.js"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets"
    }
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@tailwindcss/vite": "^4.0.1",
    "@types/bun": "latest",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/memjs": "^1.3.3",
    "@types/uuid": "^10.0.0",
    "axios": "^1.7.9",
    "memjs": "^1.3.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/node": "^22.13.0",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.2",
    "cors": "^2.8.5",
    "electron": "^34.0.2",
    "electron-builder": "^25.1.8",
    "electron-is-dev": "^3.0.1",
    "eslint": "^9.17.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "express": "^4.21.2",
    "express-validator": "^7.2.1",
    "globals": "^15.14.0",
    "memjs": "^1.3.2",
    "tailwindcss": "^4.0.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "uuid": "^11.0.5",
    "vite": "^6.0.5",
    "wait-on": "^8.0.2"
  }
}
